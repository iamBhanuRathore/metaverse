{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2016",                              /* Specify ECMAScript target version */
    "module": "CommonJS",                            /* Specify module code generation */
    "rootDir": "./src",                              /* Specify the root folder for input files */
    "outDir": "./dist",                              /* Redirect output structure to the directory */
    "strict": true,                                  /* Enable all strict type-checking options */
    "esModuleInterop": true,                         /* Enable emit interoperability between CommonJS and ES Modules */
    "forceConsistentCasingInFileNames": true,      /* Ensure that casing is correct in imports */

    /* Source Maps */
    "sourceMap": true,                              /* Create source map files for emitted JavaScript files */

    /* Type Checking */
    "skipLibCheck": true,                           /* Skip type checking of declaration files */
    
    /* Additional Options */
    "noImplicitAny": true,                          /* Raise error on expressions and declarations with an implied 'any' type */
    "noUnusedLocals": true,                         /* Report errors on unused local variables */
    "noUnusedParameters": true,                      /* Report errors on unused parameters */
    "noImplicitReturns": true                        /* Report error when not all code paths in function return a value */
  },
  "include": ["src/**/*"],                          /* Specify the files to include in the compilation */
  "exclude": ["node_modules", "**/*.spec.ts"]     /* Exclude node_modules and test files */
}
